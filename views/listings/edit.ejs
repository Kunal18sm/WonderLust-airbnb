<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Edit Your Listing</h3>
                <form 
                    method="POST" 
                    action="/listings/<%= listing._id %>/?_method=PUT" 
                    novalidate
                    class="needs-validation"
                    enctype="multipart/form-data"
                >

                    <!-- adding all details in listing js object-->
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input 
                            class="form-control" 
                            type="text" 
                            name="listing[title]" 
                            value="<%= listing.title %>"
                            required 
                        />
                    </div>
                    <br />

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" name="listing[description]" required><%=listing.description%></textarea>
                    </div>
                    <br />

                    <div class="mb-3 ">
                        <p>Original image</p>
                        <img class="edit-image" src="<%= originalImageUrl %>" alt="">
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input 
                            class="form-control" 
                            type="file" 
                            name="listing[image]"   
                        />
                    </div>
                    <br />

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input class="form-control" type="number" name="listing[price]" value="<%= listing.price %>"
                                required />
                        </div>
                        <br />

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input class="form-control" type="text" name="listing[country]"
                                value="<%= listing.country %>" required />
                        </div>
                        <br />
                    </div>



                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input class="form-control" type="text" name="listing[location]" value="<%= listing.location %>"
                            required />
                    </div>
                    <br />


                    <button class="btn btn-dark edit-btn">Edit</button>

                </form>
            </div>
        </div>

        <script src="/js/script.js"></script>

    </body>

    </html>
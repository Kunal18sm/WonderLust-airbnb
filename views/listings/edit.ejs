<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h3>Edit Your Listing</h3>
                <form 
                    method="POST" 
                    action="/listings/<%= listing._id %>/?_method=PUT" 
                    novalidate
                    class="needs-validation"
                    enctype="multipart/form-data"
                >

                    <!-- adding all details in listing js object -->
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input 
                            class="form-control" 
                            type="text" 
                            name="listing[title]" 
                            value="<%= listing.title %>"
                            required 
                        />
                    </div>
                    <br />

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" name="listing[description]" required><%=listing.description%></textarea>
                    </div>
                    <br />

                    <div class="mb-3 ">
                        <p>Original image</p>
                        <img class="edit-image" src="<%= originalImageUrl %>" alt="">
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input 
                            class="form-control" 
                            type="file" 
                            name="listing[image]"   
                        />
                    </div>
                    <br />

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input class="form-control" type="number" name="listing[price]" value="<%= listing.price %>"
                                required />
                        </div>
                        <br />

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input class="form-control" type="text" name="listing[country]"
                                value="<%= listing.country %>" required />
                        </div>
                        <br />
                    </div>



                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input class="form-control" type="text" name="listing[location]" value="<%= listing.location %>"
                            required />
                    </div>
                    <br />

                    <p>Your Selected tags</p>
                    <div class="selected-tags mb-3">
                        <% for(tag of listing.tags) { %> 
                            <span><%= tag %>,</span>
                        <% } %> 
                    </div>

                    <div class="tag-container mb-3">
                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Trending">
                                <div class="tag "> 
                                    <i class="fa-solid fa-fire"></i>Trending
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Rooms">
                                <div class="tag ">
                                    <i class="fa-solid fa-bed"></i>Rooms
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Iconic cities">
                                <div class="tag "> 
                                    <i class="fa-solid fa-tree-city"></i>Iconic cities
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Beach">
                                <div class="tag "> 
                                    <i class="fa-solid fa-umbrella-beach"></i>Beach
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Mountains">
                                <div class="tag "> 
                                    <i class="fa-solid fa-mountain-sun"></i>Mountains
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Pools">
                                <div class="tag "> 
                                    <i class="fa-solid fa-person-swimming"></i>Pools
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Camping">
                                <div class="tag "> 
                                    <i class="fa-solid fa-tents"></i>Camping
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Farms">
                                <div class="tag "> 
                                    <i class="fa-solid fa-tractor"></i>Farms
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Snow">
                                <div class="tag "> 
                                    <i class="fa-solid fa-snowflake"></i>Snow
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Volcano">
                                <div class="tag "> 
                                    <i class="fa-solid fa-volcano"></i>Volcano
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="School">
                                <div class="tag "> 
                                    <i class="fa-solid fa-school"></i>School
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Church">
                                <div class="tag "> 
                                    <i class="fa-solid fa-church"></i>Near Church
                                </div>
                        </label>

                         <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Free-wifi">
                                <div class="tag "> 
                                    <i class="fa-solid fa-wifi"></i>Free-wifi
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Horror">
                                <div class="tag "> 
                                    <i class="fa-solid fa-ghost"></i>Horror
                                </div>
                        </label>

                        <label>
                            <input class="hide" type="checkbox" name="listing[tags]" value="Earth">
                                <div class="tag "> 
                                    <i class="fa-solid fa-earth-americas"></i>Earth
                                </div>
                        </label>
                    </div>
                    <button class="btn btn-dark edit-btn">Edit</button>

                </form>
            </div>
        </div>

        <script src="/js/script.js"></script>
    </body>

